{
    "keyboard_name": "Koyanpad",
    "manufacturer": "katsuu",
    "processor":"RP2040",
    "bootloader":"rp2040",
    "url": "https://github.com/SayChunKim/koyanpad",
    "maintainer": "katsuu",
    "usb": {
        "vid": "0x2E8A",
        "pid": "0x6178",
        "device_version": "0.0.1"
    },
    "features": {
        "bootmagic": false,
        "mousekey": true,
        "extrakey": true,
        "console": false,
        "command": false,
        "nkro": true,
        "encoder": true,
        "rgblight":true
    },
    "layouts": {
        "LAYOUT": {
            "layout": [
                { "matrix": [0, 0], "x": 0, "y": 0 },
                { "matrix": [0, 1], "x":1, "y": 0}, 
                { "matrix": [0, 2], "x": 2, "y": 0 },
                { "matrix": [0, 3], "x": 3, "y": 0 },
                { "matrix": [1, 0], "x": 0, "y": 1,"label":"L"},
                { "matrix": [1, 1], "x": 1, "y": 1,"label":"O" },
                { "matrix": [1, 2], "x": 2, "y": 1,"label":"V"},
                { "matrix": [1, 3], "x": 3, "y": 1, "label":"E"}
            ]
        }
    },
    "matrix_pins":  {
        "direct":   [
        ["GP27", "GP15", "GP26", null],
        ["GP9","GP10","GP11", "GP12" ]
        ]
    },
    "encoder": {
        "rotary": [
                { "pin_a": "GP27", 
                "pin_b": "GP26",
                "resolution": 30
            }
            ]
    },
    "rgblight": {
        "led_count": 4,
        "pin": "GP14",
        "max_brightness": 150,
        "animations": {
            "knight": true,
            "rainbow_swirl": true
        }
    }
}

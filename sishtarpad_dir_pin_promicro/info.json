{
    "keyboard_name": "Sishtarpad",
    "manufacturer": "katsuu",
    "processor":"atmega32u4",
    "bootloader":"caterina",
    "url": "https://github.com/SayChunKim/sistharpad",
    "maintainer": "katsuu",
    "usb": {
        "vid": "0x1B4F",
        "pid": "0x9206",
        "device_version": "0.0.1"
    },
    "features": {
        "bootmagic": false,
        "mousekey": true,
        "extrakey": true,
        "console": false,
        "command": false,
        "nkro": true,
        "encoder": true
    },
    "layouts": {
        "LAYOUT": {
            "layout": [
                { "matrix": [0, 0], "x": 0, "y": 0 },
                { "matrix": [0, 1], "x":1, "y": 0}, 
                { "matrix": [0, 2], "x": 2, "y": 0 },
                {"matrix": [0, 3], "x": 3, "y": 0 },
                { "matrix": [1, 0], "x": 0, "y": 1,"label":"L"},
                { "matrix": [1, 1], "x": 1, "y": 1,"label":"O" },
                { "matrix": [1, 2], "x": 2, "y": 1,"label":"V"},
                { "matrix": [1, 3], "x": 3, "y": 1, "label":"E"}
            ]
        }
    },
    "matrix_pins":  {
        "direct":   [
        ["F4", "F6", "F5", null],
        ["B4", "E6", "D7", "C6" ]
        ]
    },
    "encoder": {
        "rotary": [
                { "pin_a": "F4", "pin_b": "F5", "resolution": 20 }
            ]
    }
}
